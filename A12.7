public class GameLand
{
    private int RollingDice() //method roll dice
    {
        int x;
        x = (int)((Math.random()*6)+1 + (int)((Math.random()*6)+1));
        return x;
    }
    
    public void Game() //method to play actual game
    {
        int player1 = 0;
        int player2 = 0;
        int turn = 1;
        int x1;
        int x2;
        while (player1<100 && player2<100)
        {
            System.out.println("It is turn" + turn);
            x1 = RollingDice();
            x2 = RollingDice();
            System.out.println("Player 1 is on square # " + player1 + " and rolled " + x1);
            System.out.println("Player 2 is on square # " + player2 + " and rolled " + x2);
            if (x1==2||x1==12)
                {
                System.out.println("Player 1 loses his turn and cannot move!");
                player1 = player1;
                }
            else if(x1 == 7)
                if(player1 - 7 <= 0)
                {
                    System.out.println("Player 1 rolled a 7! Moves back to Start");
                    player1 = 0;
                }
                else
                {
                    System.out.println("Player 1 rolled a 7! Moves back 7 spaces.");
                    player1 = player1 - 7;
                }
            else
            {
                player1 = player1 + x1;
                if (player1 == player2)
                {
                    System.out.println("Player 2 has been bumped back to the Start!");
                    player2 = 0;
                }
            }
                    
            
            if(x2==2||x2==12)
                {
                    System.out.println("Player 2 loses his turn and cannot move!");
                   player2 = player2;
                }
            else if(x2 == 7)
                if(player2 - 7 <= 0)
                {
                    System.out.println("Player 2 rolled a 7! Moves back to Start");
                    player2 = 0;
                }
                else
                {
                    System.out.println("Player 2 rolled a 7! Moves back 7 spaces.");
                    player2 = player2 -7;
                }
            else
            {
                player2 = player2 + x2;
                if(player2 == player1)
                {
                    System.out.println("Player 1 gets bumped back to the Start!");
                    player1 = 0;
                }
            }

            turn++;
    }
    if (player1>=100  && player2>=100)//declares the winner of the game 
        System.out.println("Player 1 is the winner!");
    else
        System.out.println("Player 2 is the winner!");
}
}
